generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String?
  password String?
}
model Task {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  dueDate String?
  completed Boolean 
}
model Habit {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  frequency Frequency?
  date      String[] // Array of nullable strings
}

enum Frequency {
  DAILY
  WEEKLY
}